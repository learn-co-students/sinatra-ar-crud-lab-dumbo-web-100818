<form  action="/posts/<%= @posty.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="edit_name">Name</label>
  <input id="edit_name" type="text" name="name" value="<%= @posty.name %>">
  <label for="edit_content">Content</label>
  <input id="edit_content" type="text" name="content" value="<%= @posty.content %>">
  <input type="submit" value="submit">
</form>
